# EditorConfig - https://editorconfig.org

# Configuração raiz
root = true

# Configurações padrão para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Arquivos Markdown - preserva espaços finais (quebras de linha)
[*.md]
trim_trailing_whitespace = false

# Arquivos YAML
[*.{yaml,yml}]
indent_size = 2

# Arquivos de ambiente
[*.env*]
indent_size = 4

# Makefile usa tabs
[Makefile]
indent_style = tab
