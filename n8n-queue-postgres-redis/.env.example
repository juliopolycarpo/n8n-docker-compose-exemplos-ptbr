# Versao do n8n
N8N_VERSION=latest

# Chave de encriptacao (OBRIGATORIO TROCAR)
N8N_ENCRYPTION_KEY=a7f3b2c1d4e5f6a7b8c9d0e1f2a3b4c5

# Bindings do host
BIND_IP=127.0.0.1
BIND_PORT=5678

# Configs de URL/Host
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# Timezone
GENERIC_TIMEZONE=America/Sao_Paulo
TZ=America/Sao_Paulo

# --- Banco de Dados (Postgres) ---
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n
POSTGRES_DB=n8n

# --- Redis (Obrigatorio para Queue Mode) ---
# Nao precisa mudar se usar o docker-compose padrao
QUEUE_BULL_REDIS_HOST=n8n-redis
QUEUE_BULL_REDIS_PORT=6379

# --- Queue Mode ---
EXECUTIONS_MODE=queue
